// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - integrates with better-auth
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false) @map("email_verified")
  name          String?
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  studySessions StudySession[]
  userConfig    UserConfig?
  weeklyGoals   WeeklyGoal[]
  sharedPlans   SharedPlan[]   @relation("SharedWith")
  ownedShares   SharedPlan[]   @relation("Owner")
  sessions      Session[]
  accounts      Account[]

  @@map("user")
}

// better-auth Session model
model Session {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

// better-auth Account model (for OAuth providers)
model Account {
  id                    String    @id @default(cuid())
  userId                String    @map("user_id")
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  idToken               String?   @map("id_token")
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

// better-auth Verification model
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verification")
}

// User configuration (default weekly goals, week start day)
model UserConfig {
  id           String   @id @default(cuid())
  userId       String   @unique @map("user_id")
  targetHours  Float    @default(30) @map("target_hours")
  weekStartDay Int      @default(1) @map("week_start_day") // 0=Sun, 1=Mon, ..., 6=Sat
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_configs")
}

// Weekly goal - stores goals for specific weeks
model WeeklyGoal {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  weekStart   DateTime @map("week_start") @db.Date // Monday of the week
  targetHours Float    @map("target_hours")
  isCustom    Boolean  @default(false) @map("is_custom") // true if user modified
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([userId])
  @@map("weekly_goals")
}

// Study session (replaces localStorage materias array)
model StudySession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date
  subject   String
  minutes   Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId])
  @@map("study_sessions")
}

// Sharing functionality
model SharedPlan {
  id           String     @id @default(cuid())
  ownerId      String     @map("owner_id")
  sharedWithId String     @map("shared_with_id")
  permission   Permission @default(READ)
  startDate    DateTime?  @map("start_date") @db.Date
  endDate      DateTime?  @map("end_date") @db.Date
  createdAt    DateTime   @default(now()) @map("created_at")

  owner      User @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWith User @relation("SharedWith", fields: [sharedWithId], references: [id], onDelete: Cascade)

  @@unique([ownerId, sharedWithId])
  @@index([sharedWithId])
  @@map("shared_plans")
}

enum Permission {
  READ
  WRITE
}
