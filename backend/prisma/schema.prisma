// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - integrates with better-auth
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false) @map("email_verified")
  name          String?
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  studySessions StudySession[]
  userConfig    UserConfig?
  weeklyGoals   WeeklyGoal[]
  workspaces    Workspace[]
  sharedPlans   SharedPlan[]   @relation("SharedWith")
  ownedShares   SharedPlan[]   @relation("Owner")
  sessions      Session[]
  accounts      Account[]
  subscription  Subscription?

  @@map("user")
}

// better-auth Session model
model Session {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

// better-auth Account model (for OAuth providers)
model Account {
  id                    String    @id @default(cuid())
  userId                String    @map("user_id")
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  idToken               String?   @map("id_token")
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

// better-auth Verification model
model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verification")
}

// User configuration (default weekly goals, week start day)
model UserConfig {
  id           String   @id @default(cuid())
  userId       String   @unique @map("user_id")
  targetHours  Float    @default(30) @map("target_hours")
  weekStartDay Int      @default(1) @map("week_start_day") // 0=Sun, 1=Mon, ..., 6=Sat
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_configs")
}

// Workspace - isolates study sessions and goals per context (Work, Personal, etc.)
model Workspace {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  name      String   @db.VarChar(50)
  color     String?  @default("#6366f1") @db.VarChar(7)
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  studySessions StudySession[]
  weeklyGoals   WeeklyGoal[]
  studyCycles   StudyCycle[]

  @@unique([userId, name])
  @@index([userId])
  @@map("workspaces")
}

// Weekly goal - stores goals for specific weeks per workspace
model WeeklyGoal {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  workspaceId String   @map("workspace_id")
  weekStart   DateTime @map("week_start") @db.Date // Monday of the week
  targetHours Float    @map("target_hours")
  isCustom    Boolean  @default(false) @map("is_custom") // true if user modified
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId, weekStart])
  @@index([userId])
  @@index([workspaceId])
  @@map("weekly_goals")
}

// Study session (replaces localStorage materias array)
model StudySession {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  workspaceId String   @map("workspace_id")
  date        DateTime @db.Date
  subject     String
  minutes     Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId])
  @@index([workspaceId])
  @@map("study_sessions")
}

// Sharing functionality
model SharedPlan {
  id           String     @id @default(cuid())
  ownerId      String     @map("owner_id")
  sharedWithId String     @map("shared_with_id")
  permission   Permission @default(READ)
  startDate    DateTime?  @map("start_date") @db.Date
  endDate      DateTime?  @map("end_date") @db.Date
  createdAt    DateTime   @default(now()) @map("created_at")

  owner      User @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWith User @relation("SharedWith", fields: [sharedWithId], references: [id], onDelete: Cascade)

  @@unique([ownerId, sharedWithId])
  @@index([sharedWithId])
  @@map("shared_plans")
}

enum Permission {
  READ
  WRITE
}

// Study Cycle - rotational study schedule per workspace (multiple cycles allowed)
model StudyCycle {
  id               String    @id @default(cuid())
  workspaceId      String    @map("workspace_id")
  name             String    @db.VarChar(50)
  isActive         Boolean   @default(false) @map("is_active")
  currentItemIndex Int       @default(0) @map("current_item_index")
  displayOrder     Int       @default(0) @map("display_order")
  lastResetAt      DateTime? @map("last_reset_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  workspace   Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  items       StudyCycleItem[]
  advances    StudyCycleAdvance[]
  completions StudyCycleCompletion[]

  @@unique([workspaceId, name])
  @@index([workspaceId])
  @@index([workspaceId, isActive])
  @@map("study_cycles")
}

// Study Cycle Item - individual subject entry in a cycle
model StudyCycleItem {
  id            String   @id @default(cuid())
  cycleId       String   @map("cycle_id")
  subject       String   @db.VarChar(100)
  targetMinutes Int      @map("target_minutes")
  position      Int

  cycle StudyCycle @relation(fields: [cycleId], references: [id], onDelete: Cascade)

  @@unique([cycleId, position])
  @@index([cycleId])
  @@map("study_cycle_items")
}

// Study Cycle Advance - tracks each time user advances to next subject
model StudyCycleAdvance {
  id           String   @id @default(cuid())
  cycleId      String   @map("cycle_id")
  fromSubject  String   @map("from_subject") @db.VarChar(100)
  toSubject    String   @map("to_subject") @db.VarChar(100)
  fromPosition Int      @map("from_position")
  toPosition   Int      @map("to_position")
  minutesSpent Int      @map("minutes_spent")
  advancedAt   DateTime @default(now()) @map("advanced_at")

  cycle StudyCycle @relation(fields: [cycleId], references: [id], onDelete: Cascade)

  @@index([cycleId])
  @@index([advancedAt])
  @@map("study_cycle_advances")
}

// Study Cycle Completion - tracks when entire cycle is completed
model StudyCycleCompletion {
  id                 String   @id @default(cuid())
  cycleId            String   @map("cycle_id")
  cycleName          String?  @map("cycle_name") @db.VarChar(50)
  totalTargetMinutes Int      @map("total_target_minutes")
  totalSpentMinutes  Int      @map("total_spent_minutes")
  itemsCount         Int      @map("items_count")
  completedAt        DateTime @default(now()) @map("completed_at")

  cycle StudyCycle @relation(fields: [cycleId], references: [id], onDelete: Cascade)

  @@index([cycleId])
  @@index([completedAt])
  @@map("study_cycle_completions")
}

// =====================================================
// SUBSCRIPTION SYSTEM
// =====================================================

// Subscription Plan - available plans (free, pro, business)
model SubscriptionPlan {
  id                 String   @id @default(cuid())
  name               String   @unique @db.VarChar(50) // "free", "pro"
  displayName        String   @map("display_name") @db.VarChar(100)
  description        String?
  priceMonthly       Float    @default(0) @map("price_monthly")
  priceYearly        Float    @default(0) @map("price_yearly")
  priceLifetime      Float?   @default(0) @map("price_lifetime")
  isActive           Boolean  @default(true) @map("is_active")
  mercadoPagoPlanId  String?  @map("mercadopago_plan_id") // Mercado Pago preapproval_plan ID (deprecated)
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  limits        PlanLimit[]
  subscriptions Subscription[]

  @@map("subscription_plans")
}

// Plan Limit - flexible limits per feature
model PlanLimit {
  id         String @id @default(cuid())
  planId     String @map("plan_id")
  feature    String @db.VarChar(50) // "max_cycles", "max_workspaces", etc.
  limitValue Int    @map("limit_value") // -1 = unlimited

  plan SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([planId, feature])
  @@map("plan_limits")
}

// Subscription - user's active subscription
model Subscription {
  id                 String             @id @default(cuid())
  userId             String             @unique @map("user_id")
  planId             String             @map("plan_id")
  status             SubscriptionStatus @default(ACTIVE)
  billingCycle       BillingCycle       @default(MONTHLY) @map("billing_cycle")
  currentPeriodStart DateTime           @map("current_period_start")
  currentPeriodEnd   DateTime           @map("current_period_end")
  cancelAtPeriodEnd  Boolean            @default(false) @map("cancel_at_period_end")
  canceledAt         DateTime?          @map("canceled_at")
  externalId         String?            @map("external_id") // Mercado Pago subscription ID
  externalCustomerId String?            @map("external_customer_id") // Mercado Pago customer ID
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan     SubscriptionPlan @relation(fields: [planId], references: [id])
  payments Payment[]

  @@index([status])
  @@index([currentPeriodEnd])
  @@map("subscriptions")
}

// Payment - payment history
model Payment {
  id             String        @id @default(cuid())
  subscriptionId String        @map("subscription_id")
  amount         Float
  currency       String        @default("BRL") @db.VarChar(3)
  status         PaymentStatus @default(PENDING)
  externalId     String?       @map("external_id") // Mercado Pago payment ID
  paidAt         DateTime?     @map("paid_at")
  createdAt      DateTime      @default(now()) @map("created_at")

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@index([status])
  @@map("payments")
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  PAUSED
}

enum BillingCycle {
  MONTHLY
  YEARLY
  LIFETIME
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
