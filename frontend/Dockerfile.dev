FROM node:20-alpine

WORKDIR /app

# Change ownership to node user (uid 1000)
RUN chown -R node:node /app

# Switch to node user
USER node

# Install dependencies
COPY --chown=node:node package*.json ./
RUN npm install --legacy-peer-deps

# Expose Astro dev server port
EXPOSE 5173

# Start Astro dev server (host already configured in astro.config.mjs)
CMD ["npm", "run", "dev"]
